<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <hr>
      <h1 class="page-header"><%= @notepad.title %>
      </h1>
    </div>
  </div>

  <div>
    <%= link_to "Edit", edit_notepad_path(@notepad), :class => 'btn btn-primary' %>

    <%= link_to "Delete", notepad_path(@notepad),
    method: :delete,
    data: {confirm: 'Are you sure?'},
    :class => 'btn btn-danger' %>

    <%= link_to "Return", notepads_path(@notepad), :class => 'btn btn-primary' %>
  </div>

  <div class="row">
    <% @notes.each do |note| %>
    <div class="col-md-4 portfolio-item">
      <h2><%= link_to note.title, note_path(note) %></h2>
      <%= raw(note.text) %>
    </div>
    <% end %>
  </div>

  <hr>

  <div class="row text-center">
    <div class="col-lg-12">
      <ul class="pagination">
        <li>
          <a href="#">&laquo;</a>
        </li>
        <li class="active">
          <a href="#">1</a>
        </li>
        <li>
          <a href="#">2</a>
        </li>
        <li>
          <a href="#">3</a>
        </li>
        <li>
          <a href="#">4</a>
        </li>
        <li>
          <a href="#">5</a>
        </li>
        <li>
          <a href="#">&raquo;</a>
        </li>
      </ul>
    </div>
  </div>
  <hr>
</div>
