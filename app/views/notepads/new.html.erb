<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <hr>
      <h1 class="page-header">Create Notepad
      </h1>
    </div>
  </div>

    <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: key %>
    <% end %>
    
  <div>
    <%= form_for @notepad do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, :class => "form-control" %>
    <hr>
    <%= f.submit "Create", :class => "btn btn-primary" %>
    <% end %>
  </div>

  <%= link_to "Back", notepads_path(@notepad), :class => 'btn btn-primary' %>

</div>
