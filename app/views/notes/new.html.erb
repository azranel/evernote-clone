<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <hr>
      <h1 class="page-header">Create Note
      </h1>
    </div>
  </div>

  <div>
    <%= form_for @note do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, :class => "form-control", :placeholder => "Title"%>
    <hr>
    <div class="dropdown">
      <h4>Please choose Notepad</h4>
      <%= f.collection_select :notepad_id, Notepad.all, :id, :title, {}, {:class => "btn btn-primary dropdown-toggle btn-block"} %>
    </div>

    <hr>
    <%= f.text_area :text, :class => 'ckeditor', as: :ckeditor, id: "ckeditor_text_area" %>
    <hr>
      <%= f.file_field :pictures, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png", :class => "btn btn-primary btn-block"%>
    <hr>
    <%= f.submit "Create", :class => 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to "Close", notes_path(@note), :class => 'btn btn-warning btn-block' %>
  </div>

  <% flash.each do |key, value| %>
  <%= content_tag :div, value, class: key %>
  <% end %>

</div>
<script>
CKEDITOR.replace('ckeditor_text_area')
</script>
